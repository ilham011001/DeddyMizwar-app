<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.InformationActivity">

    <include
        layout="@layout/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="8dp"
        android:orientation="vertical">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/deddy"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="App ID"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Deddy.Mizwar"
                android:fontFamily="@font/open_sans_semibold"/>
            
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9A9A9"
                android:layout_below="@id/name"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="V1.0.0.1"
                android:fontFamily="@font/open_sans_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9A9A9"
                android:layout_below="@id/version"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Built on"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/built"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2018-06-4"
                android:fontFamily="@font/open_sans_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9A9A9"
                android:layout_below="@id/built"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server Domain"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/server"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Cloud.ocean"
                android:fontFamily="@font/open_sans_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9A9A9"
                android:layout_below="@id/server"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Language"
                android:textStyle="bold"
                android:fontFamily="@font/open_sans_semibold"
                android:textSize="16sp"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="id"
                android:fontFamily="@font/open_sans_semibold"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#A9A9A9"
                android:layout_below="@id/phone"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>